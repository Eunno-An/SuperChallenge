<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.superchallenge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VoteDonationActivity"></activity>
        <activity android:name=".FindMapActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".SavingActivity" />
        <activity android:name=".DonationActivity" />
        <activity android:name=".SelectDonationOrSavingActivity" />
        <activity android:name=".QRCameraActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <activity android:name=".KakaoSignupActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>